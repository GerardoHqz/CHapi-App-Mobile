<?xml version="1.0" encoding="utf-8"?>
<layer-list android:opacity="opaque"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/white"/>
    <item android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="260dp"
        android:bottom="260dp">
        <bitmap android:src="@drawable/chapifull"/>
    </item>
    <item android:gravity="top"
        android:top="40dp"
        android:left="50dp">
        <bitmap android:src="@drawable/lines_top"/>
    </item>
    <item android:gravity="bottom"
        android:bottom="40dp"
        android:right="50dp">
        <bitmap android:src="@drawable/lines_bottom"/>
    </item>

</layer-list>